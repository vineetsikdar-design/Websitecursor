Options -Indexes

RewriteEngine On

# Block sensitive files
<FilesMatch "^(config\.php|database\.sql)$">
  <IfModule mod_authz_core.c>
    Require all denied
  </IfModule>
  <IfModule !mod_authz_core.c>
    Order allow,deny
    Deny from all
  </IfModule>
</FilesMatch>

# Block hidden files (.git, .env, etc.)
RewriteRule "(^|/)\." - [F,L]

# Block PHP execution inside uploads directory
RewriteRule ^uploads/.*\.php$ - [F,L,NC]

# Basic front controller fallback
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [L,QSA]
